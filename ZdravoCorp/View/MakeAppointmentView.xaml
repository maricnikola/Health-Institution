<Window x:Class="ZdravoCorp.View.MakeAppointmentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MakeAppointment" Height="450" Width="800">
    <Grid>
        <ComboBox SelectedItem="{Binding DoctorName, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding AllDoctors}" HorizontalAlignment="Left" Margin="155,129,0,0" VerticalAlignment="Top" Width="337" Height="40"/>
        <Label x:Name="_" Content="Create Appointment" HorizontalAlignment="Left" Margin="51,29,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Label Content="Doctor : " HorizontalAlignment="Left" Margin="27,129,0,0" VerticalAlignment="Top" FontSize="22"/>
        <DatePicker SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="155,217,0,0" VerticalAlignment="Top" Height="114" Width="134"/>
        <Label Content="Datum : " HorizontalAlignment="Left" Margin="27,217,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="32" Margin="513,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" RenderTransformOrigin="0.476,0.568" TextChanged="TextBox_TextChanged" FontSize="18"/>
        <Label Content="Tacno vreme : " HorizontalAlignment="Left" Margin="352,217,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content=":" HorizontalAlignment="Left" Margin="545,222,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Command="{Binding CreateAppointmentCommand}" Content="Create" HorizontalAlignment="Left" Margin="222,355,0,0" VerticalAlignment="Top" Height="48" Width="129" FontSize="16"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="418,355,0,0" VerticalAlignment="Top" FontSize="20" Height="48" Width="116" Click="Button_Click"/>
        <TextBox Text="{Binding Minutes, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="32" Margin="562,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" RenderTransformOrigin="0.476,0.568" TextChanged="TextBox_TextChanged" FontSize="18"/>

    </Grid>
</Window>
